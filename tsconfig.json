{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "./sass", "./css", "./images", "./js"]
    },
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react"
  },
  "exclude": [
    "./node_modules/**/*"
  ]
}